{
  "name": "atom-solid",
  "version": "0.0.1",
  "description": "effect-atom for solid",
  "license": "MIT",
  "author": "frank-iii",
  "contributors": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frank-iii/atom-solid.git"
  },
  "homepage": "https://github.com/frank-iii/atom-solid#readme",
  "bugs": {
    "url": "https://github.com/frank-iii/atom-solid/issues"
  },
  "files": [
    "dist"
  ],
  "private": false,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index/index.js",
  "module": "./dist/index/index.js",
  "types": "./dist/index/index.d.ts",
  "browser": {},
  "exports": {
    ".": {
      "development": {
        "import": {
          "types": "./dist/index/index.d.ts",
          "default": "./dist/index/dev.js"
        }
      },
      "import": {
        "types": "./dist/index/index.d.ts",
        "default": "./dist/index/index.js"
      }
    },
    "./components": {
      "solid": {
        "development": "./dist/components/dev.jsx",
        "import": "./dist/components/index.jsx"
      },
      "development": {
        "import": {
          "types": "./dist/components/index.d.ts",
          "default": "./dist/components/dev.js"
        }
      },
      "import": {
        "types": "./dist/components/index.d.ts",
        "default": "./dist/components/index.js"
      }
    }
  },
  "typesVersions": {
    "*": {
      "components": [
        "./dist/components/index.d.ts"
      ]
    }
  },
  "scripts": {
    "dev": "vite serve dev",
    "build": "tsup",
    "test": "concurrently pnpm:test:*",
    "test:client": "vitest",
    "test:ssr": "pnpm run test:client --mode ssr",
    "prepublishOnly": "pnpm build",
    "format": "prettier --ignore-path .gitignore -w \"src/**/*.{js,ts,json,css,tsx,jsx}\" \"dev/**/*.{js,ts,json,css,tsx,jsx}\"",
    "lint": "concurrently pnpm:lint:*",
    "lint:code": "eslint --ignore-path .gitignore --max-warnings 0 src/**/*.{js,ts,tsx,jsx}",
    "lint:types": "tsc --noEmit",
    "update-deps": "pnpm up -Li"
  },
  "peerDependencies": {
    "solid-js": "^1.6.0"
  },
  "devDependencies": {
    "@effect/platform": "^0.90.0",
    "@effect/platform-browser": "^0.70.0",
    "@types/node": "^24.2.0",
    "@types/scheduler": "^0.26.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "esbuild-plugin-solid": "^0.6.0",
    "eslint": "^9.32.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "jsdom": "^26.1.0",
    "prettier": "3.6.2",
    "solid-js": "^1.9.8",
    "tsup": "^8.5.0",
    "tsup-preset-solid": "^2.2.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.0",
    "vite-plugin-solid": "^2.11.8",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "solid"
  ],
  "packageManager": "pnpm@9.1.1",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9.0.0"
  },
  "dependencies": {
    "@effect-atom/atom": "^0.1.0",
    "effect": "^3.17.6",
    "scheduler": "^0.26.0"
  }
}
